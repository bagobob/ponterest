{% extends 'layouts/base.html.twig' %}

{% block title 'Register' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            {{ form_errors(registrationForm) }}

            <h1 class="my-5 text-center">Created an account</h1>

            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">
                         {{ form_row(registrationForm.firstName) }}
                    </div>

                    <div class="col-md-6">
                     {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>

                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                <div style="display:none">
                    {{ form_widget(registrationForm.createdAt) }}
                    {{ form_widget(registrationForm.updatedAt) }}
                </div>
                <button class="btn btn-lg btn-block btn-primary" type="submit" class="btn">Register</button>
                 <p class="mt-5 mb-3 text-center text-muted"> Already have an account?
                    <a href="{{ path('app_login') }}"> Log in </a>
                </p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
